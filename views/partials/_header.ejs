<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if(user.email){ %>
      <span class="align-middle">
        Signed in as: <%= user.email %>&nbsp;
      </span>
      <form class="form-inline" action="/signout" method="POST">
        <button type="submit" class="btn btn-secondary">Sign out</button>
      </form>
    <% } else { %>
      <form class="form-inline" action="/signin" method="POST">
        <div class="form-group mb-2">
          <input
            class="form-control"
            type="text"
            name="username"
            placeholder="Username"
            style="width: 300px; margin: 1em"
          />
          <button type="submit" class="btn btn-primary">Sign in</button>
        </div>
      </form>
    <% } %>
  </nav>
</header>