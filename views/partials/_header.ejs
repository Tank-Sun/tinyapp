<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if(!user){ %>
      <a href="/register">Register</a>&nbsp;&nbsp;
      <a href="/signin">Sign In</a>
    <% } else { %>
      <span class="align-middle">
        Signed in as: <%= user.email %>&nbsp;
      </span>
      <form class="form-inline" action="/signout?_method=DELETE" method="POST">
        <button type="submit" class="btn btn-secondary">Sign out</button>
      </form>
    <% } %>
  </nav>
</header>